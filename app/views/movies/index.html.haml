-#  This file is app/views/movies/index.html.haml
%h1 All Movies

=form_tag movies_path, :method => :get, :id => 'ratings_form' do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, @ratingSel.include?(rating)
  = submit_tag 'Refresh', :id => 'ratings_submit'

%table#movies
  %thead
    %tr
      %th{:id => 'title_header', :class => (@sortBy == @DB_TITLE) ? 'hilite':nil}= link_to "Movie Title -- paramStr: #{@ratingsStr} ... sort status: '#{@sortStr}' and rating status: '#{@filterStr}'", movies_path('sort'=>@DB_TITLE)
      %th Rating
      %th{:id => 'release_date_header', :class => (@sortBy == @DB_RELEASE_DATE) ? 'hilite':nil}= link_to "Release Date", movies_path('sort'=>@DB_RELEASE_DATE)
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
